# HECS Agent Dockerfile
# Multi-stage build for optimized ARM64 image

# Stage 1: Builder
FROM golang:1.21-alpine as builder

WORKDIR /build

# Install build dependencies
RUN apk add --no-cache git make

# Copy go mod files
COPY agent/go.mod agent/go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY agent/ .

# Build for ARM64 (Raspberry Pi)
RUN CGO_ENABLED=0 GOOS=linux GOARCH=arm64 go build \
    -ldflags="-w -s -X main.Version=1.0.0-alpha" \
    -o hecs-agent ./cmd/agent

# Stage 2: Runtime
FROM alpine:latest

# Install runtime dependencies
RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1000 hecs && \
    adduser -D -u 1000 -G hecs hecs && \
    mkdir -p /app/config /app/data /app/logs && \
    chown -R hecs:hecs /app

WORKDIR /app

# Copy binary from builder
COPY --from=builder /build/hecs-agent .

# Copy default config
COPY agent/config/default.yaml /app/config/

# Switch to non-root user
USER hecs

# Expose ports
EXPOSE 8080 9090

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/health || exit 1

# Run agent
ENTRYPOINT ["./hecs-agent"]
CMD ["--config", "/app/config/default.yaml"]
